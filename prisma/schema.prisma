// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DB_PRISMA_URL") // uses connection pooling
  directUrl = env("DB_URL_NON_POOLING") // uses a direct connection
}


model Usuario {
  id Int @id @default(autoincrement())
  nombres String
  apellidos String
  login String
  password String
}

model Cliente {
  id Int @id @default(autoincrement())
  nombres String
  apellidos String
  email String
  password String
  publicaciones Publicacion[] @relation(name: "vendedor")
  compras Publicacion[] @relation(name: "comprador")
}

model Categoria {
  id Int @id @default(autoincrement())
  nombre String
}

model Estado {
  id Int @id @default(autoincrement())
  nombre String
  descripcion String
  publicaciones Publicacion[]
  
}

model Publicacion {
  id Int @id @default(autoincrement())
  producto String
  descripcion String?
  fechaPublicacion DateTime @default(now()) @map(name: "fecha_publicacion")
  fechaVenta DateTime?
  estado Estado @relation(fields: [estadoId], references: [id])
  estadoId Int
  vendedor Cliente @relation(fields: [vendedorId], references: [id], name: "vendedor")
  vendedorId Int
  comprador Cliente? @relation(fields: [compradorId], references: [id], name: "comprador")
  compradorId Int
}

model Foto {
  id Int @id @default(autoincrement())
  ruta String
}