// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id Int @id @default(autoincrement())
  nombres String
  apellidos String
  login String
  password String
}

model Cliente {
  id Int @id @default(autoincrement())
  nombres String
  apellidos String
  email String
  password String
}

model Categoria {
  id Int @id @default(autoincrement())
  nombre String
}

// model Producto {
